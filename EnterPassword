#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <Keypad.h>

// Set up the I2C LCD (address 0x27 is common for I2C LCDs)
LiquidCrystal_I2C lcd(0x27, 16, 2);

// Set up the 4x4 keypad
const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};
byte rowPins[ROWS] = {9, 8, 7, 6}; // Row pins connected to Arduino
byte colPins[COLS] = {5, 4, 3, 2}; // Column pins connected to Arduino
Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

// Define your password
String password = "1234";
String inputPassword = "";
const int passwordLength = 4;

void setup() {
  lcd.init();                 // Initialize the LCD
  lcd.backlight();            // Turn on the backlight
  lcd.setCursor(0, 0);
  lcd.print("Enter Password:");
}

void loop() {
  char key = keypad.getKey();  // Get the key pressed on the keypad

  if (key) {
    if (key == '#') {
      // Check if the entered password is correct
      if (inputPassword == password) {
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Access Granted");
        delay(2000);
        lcd.clear();
        lcd.print("Enter Password:");
      } else {
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Wrong Password");
        delay(2000);
        lcd.clear();
        lcd.print("Enter Password:");
      }
      inputPassword = "";  // Reset the input password
    } else if (key == '*') {
      // Clear the input if '*' is pressed
      inputPassword = "";
      lcd.clear();
      lcd.setCursor(0, 0);
      lcd.print("Enter Password:");
    } else {
      // Add the key to the input password if it's not '*' or '#'
      if (inputPassword.length() < passwordLength) {
        inputPassword += key;
        lcd.setCursor(inputPassword.length(), 1);
        lcd.print('*');  // Show '*' for each character entered
      }
    }
  }
}
